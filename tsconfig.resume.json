{
  "compilerOptions": {
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,

    "jsx": "react-jsx",
    "outDir": ".out",
    "types": ["node", "vite/client"]
  },

  "include": ["./src/build/build.tsx"]
}
